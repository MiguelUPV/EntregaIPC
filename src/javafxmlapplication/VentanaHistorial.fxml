<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.VentanaHistorialController">
   <children>
      <HBox alignment="CENTER" fillHeight="false" prefHeight="400.0" prefWidth="697.0">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="buscador" promptText="Buscador por nombre..." />
                  <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNombre" prefWidth="125.0" text="Nombre" />
                        <TableColumn fx:id="colCateg" prefWidth="125.0" text="Categoría" />
                        <TableColumn fx:id="colCant" prefWidth="100.0" text="Cantidad(€)" />
                        <TableColumn fx:id="colUnidades" prefWidth="60.0" text="Unidades" />
                        <TableColumn fx:id="colFecha" prefWidth="135.0" text="Fecha" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="160.0">
               <children>
                  <VBox alignment="CENTER_LEFT" fillWidth="false" prefHeight="201.0" prefWidth="184.0" spacing="15.0">
                     <children>
                        <Button fx:id="modificar_Elemento" mnemonicParsing="false" onAction="#modificar_Gasto" prefHeight="46.0" prefWidth="139.0" style="-fx-background-color: navy;" text="Modificar gasto" textFill="WHITE" wrapText="true">
                           <font>
                              <Font name="Franklin Gothic Heavy" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="eliminar_Elemento" mnemonicParsing="false" onAction="#eliminar_Gasto" prefHeight="46.0" prefWidth="139.0" style="-fx-background-color: navy;" text="Eliminar gasto" textFill="WHITE" wrapText="true">
                           <font>
                              <Font name="Franklin Gothic Heavy" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </VBox>
                  <VBox fx:id="imprimir_Historial" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="166.0">
                     <children>
                        <Button fx:id="Imprimir_PDF" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#imprimir_PDF" prefHeight="61.0" prefWidth="134.0" style="-fx-background-color: navy;" text="Imprimir en formato PDF" textFill="WHITE" wrapText="true">
                           <font>
                              <Font name="Franklin Gothic Heavy" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
