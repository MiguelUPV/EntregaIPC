               </children>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
               <children>
                  <Button fx:id="bRegist" mnemonicParsing="false" onAction="#registrarse" text="Registrar">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="bCancel" mnemonicParsing="false" onAction="#cancelar" text="Cancelar">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="7">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Foto perfil" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="bFoto" mnemonicParsing="false" onAction="#subirFoto" text="Subir foto" />
                        <Text fx:id="nombreImagen" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" visible="false" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
               <children>
                  <Text fx:id="cajaApellido" strokeType="OUTSIDE" strokeWidth="0.0" text="Apellido" />
