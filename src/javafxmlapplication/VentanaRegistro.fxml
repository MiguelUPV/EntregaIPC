            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="6">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Repetir contrase単a" />
                  <PasswordField fx:id="cajaRepetir" />
